Library('ffi')

if CONFIG['MOZ_NATIVE_FFI']:
    OS_LIBS += CONFIG['MOZ_FFI_LIBS']
else:
    if CONFIG['_MSC_VER']:
        prefix = 'lib'
    else:
        prefix = ''
    USE_LIBS += [
        'static:/js/src/ctypes/libffi/.libs/%sffi' % prefix,
    ]
