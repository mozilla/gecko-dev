    DEFINES['MOZ_DEBUG'] = 1

if CONFIG['MOZILLA_OFFICIAL']:
    DEFINES['MOZILLA_OFFICIAL'] = True

DEFINES['GRE_MILESTONE'] = CONFIG['GRE_MILESTONE']
