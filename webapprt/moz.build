    DIRS += ['gtk']

DIRS += ['locales']

EXTRA_COMPONENTS += [
    'CommandLineHandler.js',
    'components.manifest',
    'ContentPermission.js',
    'DirectoryProvider.js',
    'PaymentUIGlue.js',
]

