    "shims/microsoftLogin.js",
    "shims/microsoftVirtualAssistant.js",
    "shims/moat.js",
    "shims/mochitest-shim-1.js",
    "shims/mochitest-shim-2.js",
    "shims/mochitest-shim-3.js",
    "shims/nielsen.js",
