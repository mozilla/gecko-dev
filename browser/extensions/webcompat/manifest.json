    "shims/stackoverflow-login.js",
    "shims/tiktok-embed.js",
    "shims/tiktok.svg",
    "shims/tracking-pixel.png",
    "shims/tsn-ca.js",
    "shims/twitter-embed.js",
    "shims/vast2.xml",
